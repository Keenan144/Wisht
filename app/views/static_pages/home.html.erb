<section id="header" class="heading home-page-header">
    <div class="container home-page-header">
        <div class="row">
            <div class="title-desc">
                <h2>Our Blog /</h2>
                <p>Danish is a sexy theme.</p>
            </div>
        </div>
    </div>
    <div class="overlay"></div>
</section>
<!-- end:header -->
<!-- begin:content -->
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-sm-8">
                <div class="row container-post">

                    <% Wish.all.each do |wish| %>

                    <div class="col-md-6">
                        <div class="post-container">
                            <div class="post-content no-padding">
                                <% wish.user_id %>
                                <%user = User.find_by(id: wish.user_id) %>
                                <%= user.name %>
                            </div>
                            <div class="post-content no-padding">
                                <%= wish.name %>
                            </div>
                            <div class="post-content">
                                <p><%= wish.content %></p>
                            </div>
                            <div class="post-atribut">
                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <a href="#"><span><i class="fa fa-heart"></i><%= wish.price %></span></a>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <a href="#"><span><i class="fa fa-comments"></i> 400</span></a>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <a href="#"><span><i class="fa fa-eye"></i> 2500</span></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
